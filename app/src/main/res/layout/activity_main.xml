<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/botonRojo"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="463dp"
        android:background="@color/rojoApagado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonAzul"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginStart="225dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="463dp"
        android:background="@color/azulApagado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonVerde"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="277dp"
        android:background="@color/verdeApagado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonAmarillo"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginStart="225dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="276dp"
        android:background="@color/amarilloApagado"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp" />

    <Button
        android:id="@+id/botonInicio"
        android:layout_width="123dp"
        android:layout_height="82dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="524dp"
        android:background="#F6F1F1"
        android:text="@string/botonInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/botonInicio" />

    <TextView
        android:id="@+id/viewRecord"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="634dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>