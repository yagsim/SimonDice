<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/botonRojo"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="36dp"
        android:background="@color/rojoApagado"
        app:layout_constraintBottom_toTopOf="@+id/botonVerde"
        app:layout_constraintEnd_toStartOf="@+id/botonAzul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonAzul"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="36dp"
        android:background="@color/azulApagado"
        app:layout_constraintBottom_toTopOf="@+id/botonAmarillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonVerde"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="346dp"
        android:layout_marginEnd="20dp"
        android:background="@color/verdeApagado"
        app:layout_constraintEnd_toStartOf="@+id/botonAmarillo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonAmarillo"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="228dp"
        android:background="@color/amarilloApagado"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp" />

    <Button
        android:id="@+id/botonInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="594dp"
        android:text="Inicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>